//some keystroke-savers :)
function view(args) {
	return Ti.UI.createView(args);
}

function label(args) {
	return Ti.UI.createLabel(args);
}

function image(args) {
	return Ti.UI.createImageView(args);
}

function window(args) {
	return Ti.UI.createWindow(args);
}

function button(args,onclick) {
	var btn = Ti.UI.createButton(args);
	btn.addEventListener('click', onclick);
	return btn;
}

exports.UtilityWindow = function(mainView, settingsView) {
	var instance = window({
		backgroundColor:'#fff',
		navBarHidden:true,
		exitOnClose:true,
		//Android specific, iOS will ignore
		activity: {
			onCreateOptionsMenu : function(e) {
				var menu = e.menu;
				var settingsButton = menu.add({ title: 'Settings' });
				settingsButton.setIcon(Ti.Android.R.drawable.ic_menu_preferences);
				settingsButton.addEventListener('click', function(e) {
					
				});
			}
		}
	});
	
	//add the main application view
	instance.add(mainView);
	
	//on iOS, overlay the info icon/system button
	if (Ti.Platform.osname === 'iphone') {
		var btn = T
	}
	
	
	
	return instance;
};
